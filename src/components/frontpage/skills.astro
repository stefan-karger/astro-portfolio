---
import { getTopSkills } from "~/lib/data"

const skills = getTopSkills(10)
---

<section class="py-28 md:py-32" id="skills">
  <h2 class="mb-8 text-center text-3xl font-bold tracking-tight md:text-4xl">Skills</h2>

  <div class="mx-auto max-w-4xl">
    <div class="flex flex-wrap justify-center gap-3">
      {
        skills.map((skill) => (
          <div class="rounded-md border border-border/60 bg-secondary/30 px-4 py-2 text-sm font-medium hover:bg-secondary/50">
            {skill}
          </div>
        ))
      }
    </div>
  </div>
</section>
