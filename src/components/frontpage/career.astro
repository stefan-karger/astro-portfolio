---
import { careerHistory } from "~/lib/data"

import Badge from "../badge.astro"
---

<section id="career">
  <h2 class="mb-10 text-center text-3xl font-bold tracking-tight md:text-4xl">
    Beruflicher Werdegang
  </h2>

  <div class="mx-auto max-w-4xl relative grid grid-col-1 gap-12">
    <div class="absolute left-6 top-0 bottom-0 w-0.5 bg-muted"></div>
    {
      careerHistory.map((job) => (
        <div class="relative flex">
          <div class="z-10 size-12 border-2 border-border bg-background rounded-full flex items-center justify-center shrink-0 text-muted-foreground text-sm font-bold">
            {job.period.split(" ")[0]}
          </div>
          <div class="p-6 pt-0">
            <h3 class="text-xl font-bold">{job.position}</h3>
            <p class="mb-3 text-sm font-medium text-muted-foreground">
              {job.company} â€¢ {job.period}
            </p>
            <p class="mb-4 text-muted-foreground hidden md:block">{job.description}</p>
            <div class="flex flex-wrap gap-2">
              {job.technologies.map((tech) => (
                <Badge>{tech}</Badge>
              ))}
            </div>
          </div>
        </div>
      ))
    }
  </div>
</section>
